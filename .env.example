# Environment variables for local development
# Copy this file to `.env` and fill in values.

# Database URL (required)
# Get this from your Railway Postgres resource. Example format:
# postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://postgres:password@containers-us-west-xxx.railway.app:port/railway

# Base URL of the web app (used by worker). For local dev use http://localhost:5000
BASE_URL=http://localhost:5000

# Optional: session cookie if you need the worker to call authenticated routes (not required if worker writes directly to DB)
SESSION_COOKIE=
SESSION_COOKIE_NAME=session

# Logging level (optional): DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
